@page
@model Enterprise_Risk_Management_System.Pages.RiskLogsModel
@{
}


<script>
    function AddRisk() {
      Swal.fire({
        icon: 'success',
        title: 'Risk captured!',
        text: 'The risk details have been successfully saved.',
        confirmButtonColor: '#3085d6',
        confirmButtonText: 'OK'
      });
    }
</script>


<div>
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="text-primary">Risk Capturing</h1>
    </div>

    <div class="mb-2"></div>

    <div class="mb-5 d-flex justify-content-between">
        <input type="search" class="form-control p-2" placeholder="Search..." style="width: 300px;">
        <div>
            <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#riskLogModal">Add Risk</a>
            <a href="#" class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#userAddModal">Import</a>
        </div>
    </div>

    <div class="table-responsive">
        <table id="userListTbl" class="table table-striped gy-5 gs-5">
            <thead>
                <tr class="fw-semibold fs-6">
                    <th>ID</th>
                    <th>Risk Title</th>
                    <th>Category</th>
                    <th>Owner</th>
                    <th>Likelihood</th>
                    <th>Impact</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>#556</td>
                    <td>Supply delay</td>
                    <td>Stock</td>
                    <td>Sibabalwe Peter</td>
                    <td>Low</td>
                    <td>Medium</td>
                    <td>Resolved</td>
                    <td class="text-end">
                        <a href="#" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#riskLogModal">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

                <tr>
                    <td>#876</td>
                    <td>Loadshedding</td>
                    <td>Power</td>
                    <td>Sibabalwe Peter</td>
                    <td>Medium</td>
                    <td>Critical</td>
                    <td>Pending</td>
                    <td class="text-end">
                        <a href="#" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#riskLogModal">Edit</a>
                        <a href="#" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Log Risk Modal -->
<div class="modal fade" id="riskLogModal" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        0
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-center" id="useraddedittitle">Add Risk</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addform" class="needs-validation" novalidate>
                    <div class="mb-3 d-none">
                        <label for="" class="form-label">Title:</label><span style="color: red"> *</span>
                        <input class="form-control" type="text" required />
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Category</label><span style="color: red"> *</span>
                        <input class="form-control" type="text" id="" required />
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Owner:</label><span style="color: red"> *</span>
                        <input class="form-control" type="text" id="lastName" required />
                    </div>
                    <div class="mb-7">
                        <label for="" class="form-label">Likelihood:</label><span style="color: red"> *</span>
                        <input class="form-control" type="email" />
                    </div>
                    <div class="mb-3 mt-2">
                        <label for="" class="form-label me-3">Impact:</label>
                        <input class="form-check-input me-1" type="radio" value="station" id="stationRadio" name="role" checked />
                        <label class="form-check-label me-3" for="station">
                            Low
                        </label>

                        <input class="form-check-input me-1" type="radio" value="high" name="role" />
                        <label class="form-check-label" for="high">
                            High
                        </label>

                        <input class="form-check-input me-1" type="radio" value="critical" name="role" />
                        <label class="form-check-label" for="admin">
                            Critical
                        </label>
                    </div>


                    <div class="mt-3">
                        <label for="" class="form-label">Status:</label><span id="starForPass" style="color: red"> *</span>
                        <input class="form-control" type="text" />
                    </div>

                </form>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" id="canceluserAdd" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" data-bs-dismiss="modal" onclick="AddRisk()">Save</button>
            </div>
        </div>
    </div>
</div>

